extends ../layouts/html_layout.jade

block title
	title= site_title + " Работа с utorrent"

block content
	div.row: div.large-12.columns: h2 Работа с utorrent
	div.row: div.large-12.columns
		h3 Убираем рекламу в utorrent

		p Заходим в Настройки -> Настройки программы -> Дополнительно и изменяем значения следующих параметров на
			ul
				li 
					| <strong>offers.sponsored_torrent_offer_enabled</strong> - false;
					| убирает верхний рекламный баннер
