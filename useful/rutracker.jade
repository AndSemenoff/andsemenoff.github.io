extends ../layouts/html_layout.jade
block title
	title= site_title + " Трекер помошник"

mixin seach(tracker, number, time, text1, text2, text3)
	ul.breadcrumbs
		li 
			a(href="http://" + tracker) #{tracker}
		if text1 != ""
			li #{text1}
		if text2 != ""
			li #{text2}
		li 
			<a href='http://#{tracker}/forum/tracker.php?f=#{number}&tm=#{time}&o=1'>#{text3}</a>
			if time==3
				<small> за последние три дня, сначала новые</small>
			if time==7
				<small> за последнюю неделю, сначала новые</small>

mixin one_line_seach(tracker, number, text)
	li 
		<span>#{tracker}</span> <a href="https://#{tracker}/forum/tracker.php?f=#{number}&tm=7&o=1"> #{text}</a><span><small> за последнюю неделю, сначала новые</small></span>

