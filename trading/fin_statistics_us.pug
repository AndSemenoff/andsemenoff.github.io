			+mli("en","out", "https://opendata.cern.ch/", "CERN", "", "icon")
			+mli("en","out", "https://data.nasa.gov/", "NASA", "", "icon")
			+mli("en","out", "https://data.fivethirtyeight.com/", "fivethirtyeight", "", "icon")
			
			
		h4 Важные индексы
		ol
			+mli("ru","my", "vix_main.html", "VIX", "Индекс и его производные. Теория. Практика")
