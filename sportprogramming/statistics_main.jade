extends ../layouts/html_layout.jade

block scripts
	link(rel="stylesheet" href="http://yandex.st/highlightjs/7.3/styles/default.min.css")

	script(type="text/javascript" src="https://polyfill.io/v3/polyfill.min.js?features=es6")
	script(id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js")


block content
	div.row: div.large-12.columns: h1 Статистика на python
	div.row: div.large-12.columns
		h2 Основные понятия
		h3 Среднее арифметическое | mean
		<math xmlns="http://www.w3.org/1998/Math/MathML" display="block">
		<mover accent="false">
		<mi>x</mi>
		<mo>&OverBar;</mo>
		</mover>
		<mo>=</mo>
		<mrow>
		<mfrac>
		<mn>1</mn>
		<mi>n</mi>
		</mfrac>
		<munderover>
		<mo>&sum;</mo>
		<mrow><mi>i</mi><mo>=</mo><mn>1</mn></mrow>
		<mi>n</mi>
		</munderover>
		<msub><mi>x</mi><mi>i</mi></msub>
		</mrow>
		</math>

		pre.python: code
			|import statistics
			|data = [1, 2, 3, 4, 6, 7, 8, 9]
			|print(statistics.mean(data))
			|>>> 5.0

		h3 Среднеквадратическое отклонение | Standard Deviation

		|\[ \sigma = \sqrt{\frac{1}{N} \sum_{i=1}^N (x_i - \overline{x})^2} \]

		pre.python: code
			|import statistics
			|data = [1, 2, 1, 1, 1, 1, 1, 1]
			|print(statistics.stdev(data))
			|>>> 0.3535533905932738

		h3 Ковариация

		|\[ \mathrm{cov}_{xy} = \mathbb{M} \left[(X - \mathbb{M}X) (Y - \mathbb{M}Y)\right] \]

		<math display="block">
		<msub>
		<mi>&sigma;</mi>
		<mrow>
		<mi>x</mi>
		<mi>y</mi>
		</mrow>
		</msub>
		<mo>=</mo>
		<mo>E</mo>
		<mo>&ApplyFunction;</mo>
		<mfenced open="[" close="]">
		<mrow>
		<mfenced>
		<mrow>
		<mi>x</mi>

		<mo>-</mo>

		<mo>E</mo>
		<mo>&ApplyFunction;</mo>
		<mfenced>
		<mi>x</mi>
		</mfenced>
		</mrow>
		</mfenced>
		<mfenced>
		<mrow>
		<mi>y</mi>
		<mo>-</mo>
		<mo>E</mo>
		<mo>&ApplyFunction;</mo>
		<mfenced>
		<mi>y</mi>
		</mfenced>
		</mrow>
		</mfenced>
		</mrow>
		</mfenced>
		</math>

