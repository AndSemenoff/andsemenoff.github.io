			+mli('ru', "out", "https://know.smartelements.ru", "smartelements.ru", "База знаний", "icon")

			li Сайты и блоги
				ol
					+mli('ru', "out", 'https://voltiq.ru/blog/', 'Вольтик.ру', ' Блог об Arduino, микроконтроллерах и проектах для мейкеров', "icon")
