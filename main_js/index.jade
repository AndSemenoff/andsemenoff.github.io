extends ../layouts/code_layout.jade

block content
	mixin li_link(lang, url, title_text, text)
		// - lang - [ru, en]
		// - url - ссылка
		// - title_text - текст ссылки
		// - text - текст описания
		li
			<span class= 'flag_#{lang}'></span>
			<a href = #{url}> #{title_text}</a>
			|&nbsp;—&nbsp;#{text}	
	div.row: div.large-12.columns: h1: strong JavaScript
	div.row: div.large-12.columns
		ol
			li
				| Конспект теории по JavaScript
				ol
					//li: strong: a(href='python_doctest.html') Работа с библиотекой doctest
					//li: strong: a(href='python_re.html') Работа с регулярными выражениями
					//li: strong: a(href='python_venv.html') Работа с виртуальным окружением в питоне с версии 3.4
					//li: strong: a(href='kivy_main.html') Работа с библиотекой Kivy
					//li: strong: a(href='statistics_main.html') Статистика на python
					//li: strong: a(href='brython_test.html') Работа питона в браузере - ТЕСТ
					//li: strong: a(href='python_faq.html') Вопросы и ответы по python
			li Фреймворки
				ol
					+li_link("en", "https://p5js.org/", "p5js", "визуальный фишки")
					+li_link("en", "", "", "")
					+li_link("en", "", "", "")
					+li_link("en", "", "", "")
			li
				| Плагины
				ol
					+li_link("en", "", "", "")
					+li_link("en", "http://www.listjs.com/", "List.js", "cортировка, поиск по спискам")
					+li_link("en", 'https://github.com/atayahmet/jquery.easypin', "jQuery easypin", "добавление информационных булавок на изображения")
					+li_link("en", "https://github.com/fengyuanchen/viewerjs", "Viewer.js", "JavaScript просмотрщик изображений")
					li 
						a(href='http://dummytext.com/') dummy text 
						| — плагин для автоматического добавления «текста-рыбы»
					li 
						a(href='http://twitter.github.io/labella.js/with_text.html') Labella.js 
						| — метки должны быть прекрасными
					li 
						a(href='https://github.com/nathancahill/Split.js') Split.js 
						| — утилита для создания разделяемых панелей
					li 
						a(href='http://responsifyjs.space/') Responsify.js 
						| — плагин делающий изображения по настоящему адаптивными
					li 
						a(href='http://mojs.io/') mojs 
						| — современный инструмент для создания анимации в вебе
			li Youtube видео, плейлисты, каналы
				ol
					+li_link("ru", "https://www.youtube.com/channel/UCY10FZglXJ8RL3xB04VpykQ", "канал", "Все темы: NodeJS, React, Redux, JS6.")
					+li_link("ru", "https://www.youtube.com/watch?v=4YfsAz-sNAo&list=PLqHlAwsJRxAOpWPtj2T6HhSzX-lKmKV2q", "плейлист", "Dojo - Основы JS6.")
					+li_link("en", "", "", "")
			li Инструменты для создания дистрибутива из Electron проекта
				ol
					+li_link("en", "https://www.npmjs.com/package/electron-winstaller", "electron-winstaller", "")
					+li_link("en", "https://www.npmjs.com/package/electron-forge", "electron-forge", "")
					+li_link("en", "https://www.npmjs.com/package/electron-builder", "electron-builder", "Самый популярный")
					+li_link("en", "", "", "")